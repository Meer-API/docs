{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Meer API Docs",
  "colors": {
    "primary": "#007fff",
    "light": "#006ad4",
    "dark": "#0079f3"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Quickstart",
            "pages": [
              "guides/quickstart"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "openapi": {
              "source": "/api-reference/openapi.json",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Get Meer",
          "href": "https://meerapi.com",
          "icon": "user-circle-plus"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@meerapi.com"
      }
    ]
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
  }
}
